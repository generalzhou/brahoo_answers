<div class="user-profile">
<h3><%= @user.username %><br></h3>
<%= image_tag @user.image.thumb %><br>
<br><br>
Questions: <br>
<% @user.questions.each do |question| %>
<%= link_to question.title, question_path(question) %><br>
<% end %>
<br><br>
Answers: <br>
<% @user.answers.each do |answer| %>
<%= link_to answer.question.title, question_path(answer.question) %><br>
<% end %>
</div>
