<div class='comments'>
  <a>
    <%= parent.comments.count %> Comment<%= 's' unless parent.comments.count == 1 %> <span class='arrow'>></span>
  </a>
  <blockquote>
    <ul class="unstyled">
      <% parent.comments.each do |comment| %>
        <li class='muted'>
          <%= comment.text %> - <%= link_to comment.user.username, comment.user %>
        </li>
      <% end %>
      <br>
      <%= render partial: 'questions/comment', locals: {commentable: parent} %>
    </ul>
  </blockquote>
</div>

