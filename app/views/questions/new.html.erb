<div class="form form-stacked">
  <%= form_for @question, url: questions_path do |f| %>
    <div class="field">
      <%= f.text_field :title, placeholder: "Question", autofocus: true%>
      <br>
      <%= f.text_area :text, :size => "24x6"%>
    </div>
    <div class="action">
      <%= f.submit "Ask", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
